#!/bin/bash
# -*- mode: bash; tab-width: 2; -*-
# vim: ts=2 sw=2 ft=bash noet

# source the Nos framework
. /opt/nos/common.sh

# initialize Nos with the original arguments
nos_init "$@"

# source common lib
. ${engine_lib_dir}/golang.sh

# install go
golang_install_runtime

# prepare env
golang_prep_env

# install gom binary
install_gom

# install godep binary
install_godep

# persist all environment variables 
nos_persist_evars

exit 0
