#!/bin/bash
# -*- mode: bash; tab-width: 2; -*-
# vim: ts=2 sw=2 ft=bash noet

# source the Nos framework
. /opt/nanobox/nos/common.sh

# initialize Nos with the original arguments
nos_init "$@"

if [ -z "$(nos_payload "config_runtime")" ]; then
	>&2 echo "This engine requires 'package' to be set in the config"
	exit 1
fi

cat <<-END
code.build:
  lib_dirs:
    - .gopath
    - vendor
END

exit 0
